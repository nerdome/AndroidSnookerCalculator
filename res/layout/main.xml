<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:orientation="vertical"
			  android:weightSum="1">

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Player 1"
				android:id="@+id/player1Text"
				android:layout_weight="1"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Player 2"
				android:id="@+id/player2Text"
				android:layout_weight="1"
				android:gravity="right"/>

	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="red"
				android:id="@+id/redPlayer1Button"
				android:onClick="@string/calcResult"
				android:layout_weight="1"
				android:tag="player1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="red"
				android:id="@+id/redPlayer2Button"
				android:onClick="@string/calcResult"
				android:layout_weight="1"
				android:tag="player2"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="yellow"
				android:id="@+id/yellowPlayer1Button"
				android:onClick="@string/calcResult"
				android:layout_weight="1"
				android:tag="player1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="yellow"
				android:id="@+id/yellowPlayer2Button"
				android:onClick="@string/calcResult"
				android:layout_weight="1"
				android:tag="player2"/>

	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="green"
				android:id="@+id/greenPlayer1button"
				android:onClick="@string/calcResult"
				android:layout_weight="1"
				android:tag="player1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="green"
				android:id="@+id/greenPlayer2Button"
				android:onClick="@string/calcResult"
				android:layout_weight="1"
				android:tag="player2"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="brown"
				android:id="@+id/brownPlayer1Button"
				android:onClick="@string/calcResult"
				android:layout_gravity="fill_horizontal"
				android:layout_weight="1"
				android:tag="player1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="brown"
				android:id="@+id/brownPlayer2Button"
				android:layout_gravity="fill_horizontal|right"
				android:onClick="@string/calcResult"
				android:layout_weight="1"
				android:tag="player2"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="blue"
				android:id="@+id/bluePlayer1Button"
				android:onClick="@string/calcResult"
				android:layout_gravity="fill_horizontal"
				android:layout_weight="1"
				android:tag="player1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="blue"
				android:id="@+id/bluePlayer2Button"
				android:layout_gravity="fill_horizontal|right"
				android:onClick="@string/calcResult"
				android:layout_weight="1"
				android:tag="player2"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="pink"
				android:id="@+id/pinkPlayer1Button"
				android:onClick="@string/calcResult"
				android:layout_gravity="fill_horizontal"
				android:layout_weight="1"
				android:tag="player1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="pink"
				android:id="@+id/pinkPlayer2Button"
				android:layout_gravity="fill_horizontal|right"
				android:onClick="@string/calcResult"
				android:layout_weight="1"
				android:tag="player2"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="black"
				android:id="@+id/blackPlayer1Button"
				android:onClick="@string/calcResult"
				android:layout_gravity="fill_horizontal"
				android:layout_weight="1"
				android:tag="player1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="black"
				android:id="@+id/blackPlayer2Button"
				android:layout_gravity="fill_horizontal|right"
				android:onClick="@string/calcResult"
				android:layout_weight="1"
				android:tag="player2"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/scorePlayer1"
				android:layout_weight="1"
				android:gravity="center"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/scorePlayer2"
				android:layout_weight="1"
				android:gravity="center"/>
	</LinearLayout>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/remainingPointsTextView"
			android:gravity="center"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/winner"
			android:gravity="center"/>

</LinearLayout>

